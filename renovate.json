{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":dependencyDashboard", ":semanticCommits", "group:recommended"],
  "labels": ["dependencies"],
  "schedule": ["before 6am on monday"],
  "rangeStrategy": "bump",
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ]
}
